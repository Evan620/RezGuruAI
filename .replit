modules = ["python-3.11", "nodejs-20", "python3"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "RezGuruAI Fixer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "run_rezguru"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "RezGuruAI-Server"

[[workflows.workflow]]
name = "RezGuruAI Fixer"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python clone_and_fix.py"
waitForPort = 5000

[[workflows.workflow]]
name = "run_rezguru"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python clone_and_fix.py"

[[workflows.workflow]]
name = "RezGuruAI-Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python start_rezguru.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python clone_and_fix.py"]

[[ports]]
localPort = 5000
externalPort = 80
